<%- include('../partials/header') %>

<br>
<form class='form' id="new-form" action="/assignments" method="POST">
    <label><b>Title:</b></label>
    <input type="text" name="title">
    <label>Lesson Instructions:</label>
    <textarea cols='60' rows='20' name="text"></textarea>
    <div id="link">
        <label>Link:</label>
        <input type="text" name="link">
        <button type="button" id="lnkBtn" onclick="handleClick()">Add an Additional Link</button>
    </div>
    <input type="submit" value="Add Assignment">
</form>

<!--Event function for Link  Append-->

<script>
    function handleClick(){
        document.getElementById('link').insertAdjacentHTML('afterbegin', '<label>Link:</label><input type="text" name="link"></input>');
    }
</script>

